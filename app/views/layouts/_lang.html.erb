<a class="dropdown-toggle" data-toggle="dropdown" href="#">
  <%= t(I18n.locale) %><span class="caret"></span>
</a>
<ul class="dropdown-menu norm-ul" role="menu">
  <li class="header-li"><%= t('layouts.header.lang.select') %></li>
  <% I18n.available_locales.each do |lang| %> 
    <li>
      <%= link_to t("layouts.header.#{lang}"), change_locale_path(lang),
      method: :post, remote: true %>
    </li>
  <% end %>
</ul>
