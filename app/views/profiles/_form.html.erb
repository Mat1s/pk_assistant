<%= form_for @profile do |f| %>
  <div class="form-group">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname, class: 'form-control', requierd: true, autocomplete: true %>
  </div>

  <div class="form-group">
    <%= f.label :surname %><br>
    <%= f.text_field :surname, class: 'form-control', requierd: true, autocomplete: true %>
  </div>

  <div class="form-group">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname, class: 'form-control', requierd: true, autocomplete: true %>
  </div>

  <div class="form-group">
    <%= f.label :birthday %><br>
    <%= f.date_field :birthday, class: 'form-control', requierd: true, autocomplete: true %>
  </div>
  
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_field :address, class: 'form-control', requierd: true, autocomplete: true %>
  </div>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control', requierd: true %>
  </div>

  <div class="actions">
    <%= f.submit t('profile.submit'), class: 'btn btn-success' %>
  </div>
<% end %>
